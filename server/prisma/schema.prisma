generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id Int  @id @default(autoincrement())
  username String @db.NVarChar(200)
  password String @db.NVarChar(200)
  role String @db.VarChar(200)
  createdAt DateTime @default(now()) @db.DateTime2
}

model Chat {
  id        Int      @id @default(autoincrement())
  chatID    String   @unique
  username  String
  socketID  String
  isActive  Boolean  @default(true)
  messages  Message[]
  timestamp DateTime @default(now()) @db.DateTime2
}

model Message {
  id        Int      @id @default(autoincrement())
  chatID    String
  sender    String
  text      String
  chat      Chat     @relation(fields: [chatID], references: [chatID])
  timestamp DateTime @default(now()) @db.DateTime2
}

model SMS {
  id        Int      @id @default(autoincrement())
  sender    String
  number    String
  message   String
  isSent    Boolean  @default(true)
  timestamp DateTime @default(now()) @db.DateTime2
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.VarChar(max)
  expiresAt DateTime @db.DateTime2

  @@map("sessions")
}
